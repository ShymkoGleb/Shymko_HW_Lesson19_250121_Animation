<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/recycler_item_vertical_padding"
    android:transitionName="@string/container_transition">

    <ImageView
        android:id="@+id/ivContactIcon"
        android:layout_width="@dimen/rv_icon_size"
        android:layout_height="@dimen/rv_icon_size"
        android:layout_margin="@dimen/margin"
        android:src="@drawable/ic_baseline_cake_24"
        android:transitionName="@string/icon_transition" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="@string/container_transition">

        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/rv_text_size"
            android:transitionName="@string/name_transition"
            tools:hint="tvContactName" />

        <TextView
            android:id="@+id/tvContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/rv_text_size"
            android:transitionName="@string/name_transition"
            tools:hint="tvContactPhone" />

    </LinearLayout>
</LinearLayout>